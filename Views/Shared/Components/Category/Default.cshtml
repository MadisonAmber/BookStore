@{
}

@model IEnumerable<string>;

<div class="d-grid">
    <a class="btn btn-outline-secondary d-block mb-1" asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1">Home</a>

    @foreach (string c in Model)
    {
        <a class="btn @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-outline-secondary") d-block mb-1" asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNum="1">@c</a>
    }

</div>