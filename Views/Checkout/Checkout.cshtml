@{
}

@model Purchase

<h2>Check out below.</h2>

<form method="post" asp-action="Checkout">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h4>Ship to:</h4>
    <div class="form-group">
        <label asp-for="@Model.Name">Name</label>
        <input asp-for="@Model.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Email">Email</label>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.AddressLine1">AddressLine1</label>
        <input asp-for="@Model.AddressLine1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.AddressLine2">AddressLine2</label>
        <input asp-for="@Model.AddressLine2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.AddressLine3">AddressLine3</label>
        <input asp-for="@Model.AddressLine3" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.City">City</label>
        <input asp-for="@Model.City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.State">State</label>
        <input asp-for="@Model.State" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Zip">Zip</label>
        <input asp-for="@Model.Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Country">Country</label>
        <input asp-for="@Model.Country" class="form-control" />
    </div>

    <div class="float-end">
        <input type="submit" class="btn btn-primary" value="Checkout" />
    </div>

</form>